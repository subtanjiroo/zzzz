<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_leandx_ai_chatbox_form" model="ir.ui.view">
        <field name="name">leandx.ai.chatbox.form</field>
        <field name="model">leandx.ai.chatbox</field>
        <field name="arch" type="xml">
            <form>
                <field name="name" widget="custom_char" nolabel="1"/>
            </form>
        </field>
    </record>

    <record id="action_leandx_ai_chatbox" model="ir.actions.act_window">
        <field name="name">Chat Box</field>
        <field name="res_model">leandx.ai.chatbox</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_leandx_ai_chatbox_form"/>
        <field name="target">current</field>
    </record>
</odoo>
